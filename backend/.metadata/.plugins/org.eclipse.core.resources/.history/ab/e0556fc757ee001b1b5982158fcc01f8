package br.com.adriano.tcc.order.service;

import java.util.List;
import java.util.Optional;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import br.com.adriano.tcc.order.model.OrderModel;
import br.com.adriano.tcc.order.repository.OrderRepository;

@Service
public class OrderService {
	
	@Autowired
	private OrderRepository repository;
	
	public Optional<List<OrderModel>> getAddresses(Long userId) {
		return repository.findAllByUserId(userId);
	}
	
	public Optional<OrderModel> getAddress(Long id) {
		return repository.findById(id);
	}

	public OrderModel addAddress(OrderModel model) {
		return repository.save(model);
	}

	public OrderModel editAddress(OrderModel model) {
		return repository.save(model);
	}

	public void deleteAddress(Long modelId) {
		repository.deleteById(modelId);
	}
}
