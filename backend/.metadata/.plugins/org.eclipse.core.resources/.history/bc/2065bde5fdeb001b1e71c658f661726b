package br.com.adriano.tcc.address.service;

import java.util.List;
import java.util.Optional;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import br.com.adriano.tcc.address.model.AddressModel;
import br.com.adriano.tcc.address.repository.AddressRepository;

@Service
public class UserService {
	
	@Autowired
	private AddressRepository repository;
	
	public List<AddressModel> getUsers() {
		return repository.findAll();
	}
	
	public Optional<AddressModel> getUser(Long id) {
		return repository.findById(id);
	}

	public AddressModel addUser(AddressModel model) {
		return repository.save(model);
	}

	public AddressModel editUser(AddressModel model) {
		return repository.save(model);
	}

	public void deleteUser(Long modelId) {
		repository.deleteById(modelId);
	}
}
